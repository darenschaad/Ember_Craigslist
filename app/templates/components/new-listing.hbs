{{#if addNewListing}}
  <div class="listingForm">
    <form>
      <div class="form-group">
        <label for="title">Listing Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="price">Listing Price</label>
        {{input value=price id="price"}}
      </div>
      <div class="form-group">
        <label for="description">Item Description</label>
        {{textarea value=description id="description"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>
      <button {{action 'saveListing'}}>Save Listing</button>
    </form>
  </div>
{{else}}
  <button {{action 'listingFormShow'}}>Post A Listing</button>
{{/if}}
