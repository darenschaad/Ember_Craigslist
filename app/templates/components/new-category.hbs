{{#if addNewCategory}}
  <div class="categoryForm">
    <form>
      <div class="form-group">
        <label for="name">Category Name</label>
        {{input value=name id="name"}}
      </div>
      <button class="btn btn-primary" {{action 'saveCategory'}}>Save Category</button>
    </form>
  </div>
  {{else}}
    <button class="btn btn-primary" {{action 'categoryFormShow'}}>Add A Category</button>
{{/if}}
